{
  "manifest_version": 2,
  "name": "Mobius",
  "version": "1.0.0",
  "description": "Auto replay youtube videos.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["mobius.js"]
    }
  ],
  "page_action": {
    "browser_style": true,
    "default_popup": "menu/menu.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "permissions": [
    "tabs"
  ]
}
